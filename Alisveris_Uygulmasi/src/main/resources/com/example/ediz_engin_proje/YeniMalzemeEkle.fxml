<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="181.0" prefWidth="181.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.ediz_engin_proje.YeniMalzemeEkleController">
    <Label style="-fx-font-size: 18px;" text="Yeni Malzeme Ekle" />

    <ComboBox fx:id="malzemeComboBox" promptText="Malzeme Seçin" />
    <TextField fx:id="miktarTextField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="124.0" promptText="Miktar" />

    <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="90.0" spacing="10">
        <Button onAction="#ekleMalzeme" text="Ekle" />
        <Button fx:id="cikisButton" onAction="#cikis" text="İptal" />
    </HBox>
</VBox>
